<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1_Mimica.View.Util.Cabecalho">
  <ContentView.Content>
      <StackLayout Orientation="Horizontal" Style="{StaticResource Cabecalho}">
          <Label Text="Jogo de Mímica"
                 TextColor="White" 
                 FontSize="24" 
                 FontAttributes="Bold"
                 VerticalOptions="Center"/>
          <Label Text="Sair" HorizontalOptions="EndAndExpand" FontSize="20" FontAttributes="Italic" VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="SairEvento"/> 
                </Label.GestureRecognizers>
          </Label>
        </StackLayout>
  </ContentView.Content>
</ContentView>